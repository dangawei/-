<link rel="stylesheet" href="css/products.css">
<section class="mt pd-banner">
    <div class="container">
        <div class="row margin-0">
            <div class="col-lg-12 text-center">
                <h2 class="text-white">产品工艺</h2>
                <p class="text-white">坚持一流管理，生产一流产品，提供一流服务，创建一流企业</p>
            </div>
        </div>
        <div class="row margin-0">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="input-group">
                    <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                    <span class="input-group-addon glyphicon glyphicon-search pd-search"></span>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="pd-sec">
    <div class="container">
        <div class="row pd-sec-name">
            <div class="col-md-12 pd-name-list">
                {{#each products}}
                    <a href="/product?id={{id}}" class="pd-name-a">{{name}}</a>
                {{/each}}
            </div>
        </div>
        <div class="row">
            {{#each products}}
                <div class="col-md-6 col-sm-12 col-xs-12 pd-box">
                    <div class="pd-box-top">
                        <a href="/product?id={{id}}">
                            <img class="img-responsive" src="{{img_url}}" alt="">
                        </a>
                    </div>
                    <div class="pd-box-bottom">
                        <h3>{{name}}</h3>
                        <h4 class="pd-text-bLine">{{name}}</h4>
                        <a href="/product?id={{id}}">了解更多</a>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="row">
            <p class="page-p text-center">4 条记录 1/1 页 <select class="page-select">
                <option value="1">1</option>
            </select>
            </p>
        </div>
    </div>
</section>